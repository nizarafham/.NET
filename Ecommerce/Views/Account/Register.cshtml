@model Ecommerce.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce</title>
    @* Sertakan link ke CSS framework yang Anda gunakan *@
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    @* Atau link ke file CSS lokal Anda *@
    @* <link rel="stylesheet" href="~/css/site.css" /> *@
</head>
<body class="bg-gray-100"> @* Pastikan ini adalah tag body HTML biasa, tanpa asp- atribut *@
} @* Akhir blok if (Layout == null) untuk pembuka body *@

<div class="max-w-md mx-auto mt-10 bg-white p-8 rounded-lg shadow-xl">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-8">Daftar Akun Baru</h2>
    <form asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
        <div asp-validation-summary="All" class="text-red-500 text-sm mb-4"></div> @* Tampilkan semua error validasi *@
        <div class="mb-4">
            <label asp-for="Username" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <input asp-for="Username" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Username" class="text-red-500 text-xs italic"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Password" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <input asp-for="Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Password" class="text-red-500 text-xs italic"></span>
        </div>
         <div class="mb-6">
            <label asp-for="ConfirmPassword" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <input asp-for="ConfirmPassword" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs italic"></span>
        </div>
        <div class="flex items-center justify-between">
            <button type="submit" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full">
                Daftar
            </button>
        </div>
        <div class="mt-4 text-center">
            <a asp-controller="Account" asp-action="Login" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                Sudah punya akun? Login di sini
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>