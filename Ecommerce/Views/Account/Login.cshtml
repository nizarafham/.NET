@{
    ViewData["Title"] = "Login";
    Layout = null; // Ini yang membuat view ini tidak menggunakan layout
}

@model Ecommerce.Models.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce</title>
    @* Sertakan link ke CSS framework yang Anda gunakan, misalnya Tailwind CSS *@
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    @* Atau link ke file CSS lokal Anda jika ada *@
    @* <link rel="stylesheet" href="~/css/site.css" /> *@
</head>
<body class="bg-gray-100"> @* Tambahkan background color ke body *@

<div class="max-w-md mx-auto mt-10 bg-white p-8 rounded-lg shadow-xl">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-8">Login ke Akun Anda</h2>
    <form asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>
        <div class="mb-4">
            <label asp-for="Username" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <input asp-for="Username" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Username" class="text-red-500 text-xs italic"></span>
        </div>
        <div class="mb-6">
            <label asp-for="Password" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <input asp-for="Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Password" class="text-red-500 text-xs italic"></span>
        </div>
        <div class="flex items-center justify-between">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full">
                Login
            </button>
        </div>
        <div class="mt-4 text-center">
            <a asp-controller="Account" asp-action="Register" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                Belum punya akun? Daftar di sini
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

</body>
</html>
